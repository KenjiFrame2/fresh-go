generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  STORE
  COURIER
  ADMIN
}

enum OrderStatus {
  CREATED
  WAITING_PAYMENT
  PAID
  WAITING_STORE
  STORE_ACCEPTED
  STORE_REJECTED
  WAITING_COURIER
  COURIER_ACCEPTED
  ASSEMBLING
  READY_FOR_PICKUP
  PICKED_UP
  IN_DELIVERY
  DELIVERED
  COMPLETED
  ISSUE
  DISPUTE
  REFUND
  PAYOUT
  CLOSED
}

enum TransactionType {
  PAYMENT          // Оплата от клиента
  REFUND           // Возврат клиенту
  PAYOUT_STORE     // Выплата магазину
  PAYOUT_COURIER   // Выплата курьеру
  PLATFORM_FEE     // Комиссия платформы
}

model Transaction {
  id        String          @id @default(uuid())
  orderId   String
  order     Order           @relation(fields: [orderId], references: [id])
  type      TransactionType
  amount    Decimal         @db.Decimal(10, 2)
  createdAt DateTime        @default(now())
}

model User {
  id              String   @id @default(uuid())
  phone           String   @unique
  passwordHash    String
  role            UserRole @default(CLIENT)
  fullName        String?
  refreshToken    String?
  isApproved      Boolean  @default(false)
  ordersAsClient  Order[]  @relation("ClientOrders")
  ordersAsStore   Order[]  @relation("StoreOrders")
  ordersAsCourier Order[]  @relation("CourierOrders")
  products        Product[]
  createdAt       DateTime @default(now())
}

model Product {
  id          String   @id @default(uuid())
  storeId     String
  store       User     @relation(fields: [storeId], references: [id])
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  oldPrice    Decimal? @db.Decimal(10, 2)
  imageUrl    String?
  isActive    Boolean  @default(true)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  createdAt   DateTime @default(now())
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]
}

model Order {
  id           String      @id @default(uuid())
  status       OrderStatus @default(CREATED)
  clientId     String
  client       User        @relation("ClientOrders", fields: [clientId], references: [id])
  storeId      String
  store        User        @relation("StoreOrders", fields: [storeId], references: [id])
  courierId    String?
  courier      User?       @relation("CourierOrders", fields: [courierId], references: [id])
  items        OrderItem[]
  logs         OrderLog[]
  photos       OrderPhoto[]
  transactions Transaction[]
  address      String      @default("адресс не указан")
  comment      String?
  totalAmount  Decimal     @db.Decimal(10, 2)
  deliveryFee  Decimal     @db.Decimal(10, 2)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @default(now()) @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
}

model OrderLog {
  id         String      @id @default(uuid())
  orderId    String
  order      Order       @relation(fields: [orderId], references: [id])
  fromStatus OrderStatus?
  toStatus   OrderStatus
  userId     String
  metadata   Json?
  createdAt  DateTime    @default(now())
}

model OrderPhoto {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  url       String   // Путь к файлу
  type      String   // 'ASSEMBLY', 'PICKUP', 'DELIVERY'
  createdAt DateTime @default(now())
}
